<span class="pas-space">  </span><span class="pas-ident">BlueColor</span><span class="pas-sym">:</span><span class="pas-space"> </span><span class="pas-ident">LongWord</span><span class="pas-space"> </span><span class="pas-sym">=</span><span class="pas-space"> </span><span class="pas-hex">$00000000</span><span class="pas-sym">;</span>

