<span class="pas-space">  </span><span class="pas-ident">Form1</span><span class="pas-sym">:</span><span class="pas-space"> </span><span class="pas-ident">TForm1</span><span class="pas-sym">;</span>
<span class="pas-space">  </span><span class="pas-ident">MyColor</span><span class="pas-sym">:</span><span class="pas-space"> </span><span class="pas-ident">LongWord</span><span class="pas-sym">;</span>
