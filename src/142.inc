<span class="pas-space">  </span><span class="pas-ident">Image1</span><span class="pas-sym">.</span><span class="pas-ident">Canvas</span><span class="pas-sym">.</span><span class="pas-ident">Brush</span><span class="pas-sym">.</span><span class="pas-ident">Color</span><span class="pas-space"> </span><span class="pas-sym">:=</span><span class="pas-space"> </span><span class="pas-ident">TColor</span><span class="pas-sym">(</span><span class="pas-ident">MyColor</span><span class="pas-sym">)</span><span class="pas-sym">;</span>
